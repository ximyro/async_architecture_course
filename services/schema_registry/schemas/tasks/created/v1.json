{
  "type": "object",
  "properties": {
    "event_name": {
      "enum": ["Tasks.Created"]
    },
    "event_version": {
      "enum": ["v1"]
    },
    "event_time":    { "type": "string" },
    "producer":      { "type": "string" },
    "event_id":      { "type": "string"  }, 
    "data": {
      "type": "object",
      "properties": {
        "title": {
          "description": "Task title",
          "type": "string"
        },
        "public_id": {
          "description": "The identifier of task",
          "type": "integer"
        },
        "description": {
            "description": "Task description",
            "type": ["string", null]
        },
        "assigned_user_id": {
            "description": "The identifier of assigned user",
            "type": "integer"
        },
        "status": {
          "description": "The identifier of assigned user",
          "type": "string",
          "enum": ["created", "completed"]
      }
      },
      "required": [ "title", "assigned_user_id", "public_id", "status" ]
    },
    "required": ["event_name", "event_version", "data", "event_time", "producer", "event_id"]
  }
}